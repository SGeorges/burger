<div class= "row mb-3">
  <div class= "col">
    <img id= "logo" class= "rounded mx-auto d-block w-25" src= "/assets/images/krabbypatty.jpg">
    <h2 class= "text-center">Krusty Krab</h2>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class= "col-md-6">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class= "container">
  <form class="create-form">
    <h4>Place your Order!</h4>

    <div class="form-group">
      <label for= "burger-order"></label>
      <textarea class= "form-control" id= "burger-order" rows= "2"></textarea>
    </div>

    <button class= "btn btn-dark" type="submit">Submit</button>
  </form>
</div>
